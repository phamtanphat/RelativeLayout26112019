<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:background="#f20"
        android:textColor="#ffff"
        android:id="@+id/tvViewRed"
        android:textSize="30sp"
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvViewRed"
        android:background="#66BB6A"
        android:textColor="#ffff"
        android:id="@+id/tvViewGreen"
        android:textSize="30sp"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvViewGreen"
        android:background="#29B6F6"
        android:textColor="#ffff"
        android:id="@+id/tvViewBlue"
        android:textSize="30sp"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvViewBlue"
        android:background="#FFCA28"
        android:textColor="#ffff"
        android:id="@+id/tvViewOrange"
        android:textSize="30sp"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvViewOrange"
        android:background="#A7A6A3"
        android:textColor="#ffff"
        android:id="@+id/tvViewGray"
        android:textSize="30sp"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tvViewGray"
        android:background="#EC407A"
        android:textColor="#ffff"
        android:id="@+id/tvViewPink"
        android:textSize="30sp"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>